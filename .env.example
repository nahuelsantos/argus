# Argus Configuration Environment Variables
# Copy this file to .env and update with your actual values

# LGTM Stack Default Credentials
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=admin
PROMETHEUS_USERNAME=
PROMETHEUS_PASSWORD=

# OPTIONAL: Argus Internal Alert Testing (NOT your Prometheus Alertmanager)
# Only needed if you want to test Argus's internal alerting simulation features
# This is separate from your real Alertmanager at localhost:9093
ALERTING_PASSWORD=your-smtp-password-for-argus-test-emails

# LGTM Stack Service URLs (if different from defaults)
GRAFANA_URL=http://localhost:3000
PROMETHEUS_URL=http://localhost:9090
LOKI_URL=http://localhost:3100
TEMPO_URL=http://localhost:3200

# Optional: Override default timeouts (in seconds)
LGTM_TIMEOUT=8
HTTP_TIMEOUT=30

# Optional: Environment and version override
ARGUS_ENVIRONMENT=development
ARGUS_VERSION=v0.0.1
